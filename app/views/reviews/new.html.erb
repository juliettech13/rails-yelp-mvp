<h1>Create a review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
<%= f.input :content, label: 'Review your restaurant here', placeholder: "This place is amazing!" %>
<%= f.input :rating, label: 'Leave a rating from 1 to 5' %>
<%= f.button :submit, label: 'Create' %>
<% end %>
